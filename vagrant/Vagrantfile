# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  # The most common configuration options are documented and commented below.
  # For a complete reference, please see the online documentation at
  # https://docs.vagrantup.com.

  config.vm.define "devstack" do |devstack|
    devstack.vm.box = "peru/ubuntu-16.04-server-amd64"
    devstack.env.enable
    devstack.vm.synced_folder "synced_folders_devstack/", "/home/vagrant"
    devstack.vm.network "private_network", ip: ENV["DATAPATH_ADDR"]
    devstack.vm.hostname = "devstack-ovn"
    devstack.vm.provision "shell", inline: "./install_devstack.sh"
    devstack.vm.provision "shell", inline: "cp ./rabbitmq.config /etc/rabbitmq/ && systemctl restart rabbitmq-server"
    devstack.vm.provision "shell", inline: "./install_microk8s.sh"
    devstack.vm.provider "libvirt" do |libvirt|
      libvirt.memory = "8192"
      libvirt.cpus = 2
      libvirt.nested = true
      libvirt.volume_cache = 'none'
    end
  end
  
  config.vm.define "ryu" do |ryu|
    ryu.vm.box = "peru/ubuntu-16.04-server-amd64"
    ryu.env.enable
    ryu.vm.synced_folder "synced_folders_ryu/", "/home/vagrant"
    ryu.vm.network "private_network", ip: ENV["RYU_ADDR"]
    ryu.vm.hostname = "ryu"
    ryu.vm.provision "shell", inline: "./install_mn.sh"
    ryu.vm.provision "shell", inline: "./install_ryu.sh"
    ryu.vm.provider "libvirt" do |libvirt|
      libvirt.memory = "4096"
      libvirt.cpus = 2
      libvirt.nested = true
      libvirt.volume_cache = 'none'
    end
  end

end
